<h1 class="text-center muted">添加捐助者</h1>
<div class="container-fluid" style= "padding-bottom: 2%">
  <div class="row-fluid">
    <div class="span2 offset1">
      <div style="background-color: white;">
      <%= render "shared/left"%>
      </div>
      </div>

    <div class="span7 " style="background-color: white;">
      <div style="padding:2%">
        <%= form_for @donor do |f|%>
          <%= f.label :name, "姓名" %>
          <%= f.text_field :name %>
          <%= f.label :address, "地址" %>
          <%= f.text_field :address %>
          <%= f.label :type_desc, "捐助类型" %>
          <%= f.text_field :type_desc %>
          <%= f.label :num, "数量" %>
          <%= f.text_field :num %>
          <p><%= f.submit "创建", class: "btn btn-primary"%></p>
        <% end %>        
      </div>
    </div>
  </div>
</div>






