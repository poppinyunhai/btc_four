<h1 class="text-center muted">新闻管理</h1>
<div class="container-fluid" style= "padding-bottom: 2%">
  <div class="row-fluid">
    <div class="span2 offset1">
      <div style="background-color: white;">
      <%= render "shared/left"%>
      </div>
      </div>

    <div class="span7 " style="background-color: white;">
      <div style="padding:2%">
        <%= form_for @pre, :url => { :controller => 'pres', :action => 'update', :id => @pre } do |pre| %>
          <%= pre.label :titile, "标题" %>
          <%= pre.text_field :title, class: "span7" %>
          <%= pre.label :content, "新闻内容" %>
          <%= pre.kindeditor :content, class: "span7" %>
          <p style="padding-top:2%">
          <%= pre.submit "更新", class: "btn btn-primary"%>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>







